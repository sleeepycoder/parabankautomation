{
  "name": "parabankautomation",
  "version": "1.0.0",
  "description": "Cypress automation framework for ParaBank demo application",
  "type": "module",
  "scripts": {
    "cy:run": "cypress run",
    "cy:smoke": "cypress run --spec \"cypress/e2e/smoke/**/*.cy.js\"",
    "cy:regression": "cypress run",
    "report:merge": "mochawesome-merge cypress/reports/*.json > cypress/reports/output.json",
    "report:generate": "marge cypress/reports/output.json -o cypress/reports",
    "cy:report": "npm run cy:run && npm run report:merge && npm run report:generate",
    "lint": "eslint cypress --ext .js",
    "lint:fix": "eslint cypress --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "cypress": "^15.9.0",

    "eslint": "^8.57.1",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.2.5",

    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.1.0",
    "mochawesome-report-generator": "^6.3.2"
  }
}
